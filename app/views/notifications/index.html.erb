<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <h3 class="d-inline">Notifications</h3>
    <%= bootstrap_form_tag url: user_notifications_path(current_user), method: :get, html: { class: "form-inline" } do |form| %>
      <%= form.select :filter, options_for_select({"All" => "", "Read" => "read", "Unread" => "unread"}, selected: params[:filter]), { hide_label: true }, { onchange: 'this.form.submit()' } %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="container">
     <%= render(Notification::ListComponent.new(notifications: @notifications)) %>
    </div>
  </div>
</div>
