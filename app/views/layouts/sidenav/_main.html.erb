<h4 class="mt-4">Nav</h4>
<div class="list-group">
    <%= link_to "Users", users_path, class: "list-group-item list-group-item-action #{'active' if current_page?(users_path)}" %>
    <%= link_to "Events", events_path, class: "list-group-item list-group-item-action #{'active' if current_page?(events_path)}" %>
    <%= link_to "Tasks", task_lists_path, class: "list-group-item list-group-item-action #{'active' if current_page?(task_lists_path)}" %>
    <% if @user.present? %>
        <%= render(Notification::DropdownComponent.new(notifications: @user.notifications.newest_first.limit(10))) %>
    <% end %>
</div>