<%= bootstrap_form_with model: event do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.text_field :start_date, data: { controller: 'date-picker', 'date-picker-target': 'daterange', 'date-picker-options-value': '{ "singleDatePicker": true, "showDropdowns": true }'} %>
  <%= form.text_field :end_date, data: { controller: 'date-picker', 'date-picker-target': 'daterange', 'date-picker-options-value': '{ "singleDatePicker": true, "showDropdowns": true }'} %>

  <%= form.text_field :name %>
  <%= form.submit %>
<% end %>