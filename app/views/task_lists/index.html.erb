<p id="notice"><%= notice %></p>

<h1>
  Task Lists
  <span class="float-end">
    <%= link_to 'New Task List', new_task_list_path, class: 'btn btn-primary text-white' %>
  </span>
</h1>

<div data-controller="isotope-base">
  <div data-isotope-base-target="grid" class="grid">
    <% @task_lists.each do |task_list| %>
      <div class="grid-item">
        <%= render task_list %>
      </div>
    <% end %>
  </div>
</div>